---
interface Props {
Text1: string;
Text2: string;
Text3: String;
Text4: String;
}

const {Text1, Text2, Text3, Text4} = Astro.props;
---

<style>
    .font-josefin-slab {
        font-family: 'Josefin Slab', serif;
    }
    .font-josefin-sans {
        font-family: 'Josefin Sans', sans-serif;
    }
    .font-inter {
        font-family: 'Inter', sans-serif;
    }
</style>



<div class="w-full bg-[#A3E784] sm-w-2">
    <div class="grid">
        <div class="grid grid-cols-12 items-center border-b py-2 mt-15 h-20">
            <div class="col-span-10">
                <span class="text-2xl font-josefin-slab font-bold pl-12">{Text1}</span>
            </div>
            <div class="col-span-2 flex items-center justify-center space-x-4">
                <p class="text-2xl font-josefin-slab font-bold">{Text2}</p>
                <p class="text-2xl font-josefin-slab font-bold">{Text3}</p>
                <p class="text-2xl font-josefin-slab font-bold">{Text4}</p>
            </div>
        </div>
    </div>
</div>