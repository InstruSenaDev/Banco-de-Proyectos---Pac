---
interface Props {
  Text: string;
  id?: string;
  options: { value: string | number; label: string }[];
}

const { Text, id, options } = Astro.props;
---
<link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Josefin+Sans&display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Josefin+Slab:ital,wght@0,100..700;1,100..700&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&display=swap" rel="stylesheet">

<style>
    .font-nunito-sans {
        font-family: "Nunito Sans", sans-serif;
        font-optical-sizing: auto;
    }
</style>

<form class="">
    <label for={id} class="pace-y-2 w-1/2 font-nunito-sans font-semibold">{Text}</label>
    <select id={id} class="bg-[#F5F6FA] w-[100%] min-h-11 mt-3 rounded-[4px] border border-[#D5D5D5] px-[20px] py-[7px] mb-2 text-[15px] transition-transform transform outline-none focus:translate-y-[-5px]">
        <option selected disabled>Elige una opci√≥n</option>
        {options.map(option => (
            <option value={option.value}>{option.label}</option>
        ))}
    </select>
</form>
