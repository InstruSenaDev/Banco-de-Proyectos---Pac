---
import Layoutprincipal from "../layouts/Layoutprincipal.astro"
import Layoutcontenido from "../layouts/Layoutcontenido.astro"
import Input from "../Components/Input.astro"
import BotonPrincipal from "../Components/BotonPrincipal.astro"
import RadioButton from "../Components/RadioButton.astro"
import BotonSegundo from "../Components/BotonSegundo.astro"
import Layoutcontenido2 from "../layouts/Layoutcontenido2.astro"


// ID del proyecto que deseas mostrar
const projectId = 1; // Cambia este ID según el proyecto que quieras mostrar

// URL de la API con el ID del proyecto
const API_URL = `https://669f9862b132e2c136fe7374.mockapi.io/bancodeproyectos/proyecto/${projectId}`;


let projectData = null;
try {
  const response = await fetch(API_URL);
  if (!response.ok) {
    throw new Error(`Error: ${response.statusText}`);
  }
  projectData = await response.json();
  console.log('Fetched project data:', projectData);  // Verifica si los datos se están obteniendo correctamente
} catch (error) {
  console.error('Fetch error:', error);
}
---


<Layoutprincipal title="Detalle del proyecto">

    

    <Layoutcontenido2 title="contenido" text1="Detalle del proyecto">

        <div class="w-1/2 mx-auto">
            <div class="flex font-josefin-slab flex-col space-y-8">
                {projectData.map((proyecto) => (
                    <div ={proyecto.id} class="space-y-4">
                      <Input type="text" Text="Nombre Del Proyecto" placeholder={proyecto.nombre} id="1" />
                      <Input type="text" Text="Sector Impactado" placeholder={proyecto.sector} id="2" />
                      <Input type="text" Text="Responsable" placeholder={proyecto.responsable} id="3" />
                    </div>
                  ))}
                
                <div class="space-y-2">
                    <label class="font-josefin-slab font-semibold text-black">
                        Disponibilidad Para Reuniones Con El Equipo Desarrollador
                    </label>
                </div>

                <div class="grid sm:grid-cols-3 grid-cols-1 sm:gap-y-4 gap-4">
                    <div class="flex justify-center">
                        <BotonPrincipal  Text="Semanal" />
                    </div>
                    <div class="flex justify-center">
                        <BotonPrincipal Text="Quincenal" />
                    </div>
                    <div class="flex justify-center">
                        <BotonPrincipal  Text="Mensual" />
                    </div>
                </div>

                <div class="grid sm:grid-cols-3 gap-x-8 sm:gap-y-4 mt-4 ">
                    <RadioButton Text="Lunes" />
                    <RadioButton Text="Martes" />
                    <RadioButton Text="Miércoles" />
                    <RadioButton Text="Jueves" />
                    <RadioButton Text="Viernes" />
                    <RadioButton Text="Sábado" />
                </div>
                
            </div>

            <div class="flex flex-col items-center justify-center lg:flex-row space-y-2 sm:space-y-0 sm:space-x-4 m-6 ">
                   <a href="/Calificar3"> <BotonSegundo Text="Siguiente"/> </a>
                   <a href="/Calificar"> <BotonPrincipal Text="Atras"/> </a>
            </div>

        </div>

    </Layoutcontenido2>


</Layoutprincipal>

