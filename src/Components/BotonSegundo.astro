---

interface Props {
  Text: string;
}

const { Text } = Astro.props;
---

<button
  class="px-8 z-30 py-4 bg-[#A3E784] rounded-md text-white relative font-semibold font-sans after:-z-20 after:absolute after:h-1 after:w-1 
  after:bg-[#90cc74] after:left-5 overflow-hidden after:bottom-0 after:translate-y-full after:rounded-md after:hover:scale-[300] 
  after:hover:transition-all after:hover:duration-700 after:transition-all after:duration-700 transition-all duration-700 "
  <span class="relative z-10 text-black group-hover:text-black text-[18px] duration-500">{Text}</span>

  
</button>
