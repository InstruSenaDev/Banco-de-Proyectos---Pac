---
import AceptarTerminos from './AceptarTerminos.astro';
interface Props {
  Text1: string;
  id1: string;
  id2: string;
}

const { Text1, id1, id2 } = Astro.props;
---

<div class="w-full bg-white">
    <div class="grid gap-4">
        <div class="grid grid-cols-12 items-center border-b py-2 mt-15 h-auto ">
            <div class="col-span-10 flex items-center">
                <span class="text-lg pl-12">{Text1}</span>
            </div>
            <div class="col-span-1 flex justify-center items-center mb-8 ">
                <AceptarTerminos Text="" id={id1}></AceptarTerminos>
            </div>
            <div class="col-span-1 flex justify-center items-center mb-8">
                <AceptarTerminos Text="" id={id2}></AceptarTerminos>
            </div>
        </div>
    </div>
</div>