        placeholder={placeholder} 
        id="nombreCompleto" 
        name="nombreCompleto" 
        required class="bg-[#F5F6FA] w-[350px] min-h-11 mt-3 rounded-[4px] border border-[#D5D5D5] px-[20px] py-[7px] mb-2 text-[15px] transition-transform transform outline-none focus:translate-y-[-5px]">
