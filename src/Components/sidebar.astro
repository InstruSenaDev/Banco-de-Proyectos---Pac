---
const barraLateral = document.querySelector(".barra-lateral");
---

<link rel="stylesheet" href="..//style/sidebar.css">

<div class="fixed w-12 h-12 text-3xl hidden justify-center items-center rounded-t-3xl cursor-pointer bg-custom-green text-black inset-y-4 z-50">
   <ion-icon name="menu-outline"></ion-icon>
   <ion-icon name="close-outline"></ion-icon>
</div>

 <!--barra lateral -->
<div id="barra-lateral" class="fixed flex flex-col justify-between w-64 h-full overflow-hidden py-5 bg-custom-green transition-all duration-500 ease-in-out z-30 "> 
   <div>
       <div class="nombre-pagina">
           <ion-icon id="cloud" name="cloud-outline"></ion-icon>
           <span>Apex</span>
       </div>
       <button class="boton">
           <ion-icon name="add-outline"></ion-icon>
           <span>Create new</span>
       </button>
   </div>

   <nav class="navegacion">
       <ul>
           <li>
               <a id="inbox" href="#">
                   <ion-icon name="mail-unread-outline"></ion-icon>
                   <span>Inbox</span>
               </a>
           </li>
           <li>
               <a href="#">
                   <ion-icon name="star-outline"></ion-icon>
                   <span>Starred</span>
               </a>
           </li>
           <li>
               <a href="#">
                   <ion-icon name="paper-plane-outline"></ion-icon>
                   <span>Sent</span>
               </a>
           </li>
           <li>
               <a href="#">
                   <ion-icon name="document-text-outline"></ion-icon>
                   <span>Drafts</span>
               </a>
           </li>
           <li>
               <a href="#">
                   <ion-icon name="bookmark-outline"></ion-icon>
                   <span>Important</span>
               </a>
           </li>
           <li>
               <a href="#">
                   <ion-icon name="alert-circle-outline"></ion-icon>
                   <span>Spam</span>
               </a>
           </li>
           <li>
               <a href="#">
                   <ion-icon name="trash-outline"></ion-icon>
                   <span>Trash</span>
               </a>
           </li>
       </ul>
   </nav>

   <div>
       <div class="linea"></div>

       <div class="modo-oscuro">
           <div class="info">
               <ion-icon name="moon-outline"></ion-icon>
               <span>Drak Mode</span>
           </div>
           <div class="switch">
               <div class="base">
                   <div class="circulo">
                       
                   </div>
               </div>
           </div>
       </div>

       <div class="usuario">
           <img src="/Jhampier.jpg" alt="">
           <div class="info-usuario">
               <div class="nombre-email">
                   <span class="nombre">Jhampier</span>
                   <span class="email">jhampier@gmail.com</span>
               </div>
               <ion-icon name="ellipsis-vertical-outline"></ion-icon>
           </div>
       </div>
   </div>

</div>
