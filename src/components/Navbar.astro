---
interface Props {
Text: string;
}

const {Text} = Astro.props;
---

<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');
</style>

<nav class="bg-Color_carta flex justify-end items-center p-4">

<div class="flex items-center">
    <img src="/Img/Avatar.png" alt="User Avatar" class=" flex rounded-full w-8 h-8 mr-2">
</div>

<div class="flex flex-col">
    <span class="text-black">Karen Riascos</span>
    <span class="text-gray-600 text-sm">{Text}</span>
</div>
</nav>
