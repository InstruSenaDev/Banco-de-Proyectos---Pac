---
export interface Props {
  title: string;
  title2:  string;
}
const { title, title2 } = Astro.props;
import Sidebard from '../Components/Sidebard.astro';
import Navbar from '../Components/Navbar.astro';

---

<!DOCTYPE html>
<html lang="en">
	<head>
        <meta charset="UTF-8">
        <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Josefin+Sans&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Josefin+Slab&display=swap" rel="stylesheet" />
     
		<title>{title}</title>

  <body>
    <Sidebard/>
    <Navbar Text='SuperAdmin'/>
    <div class=" text-center  " >
        <span class="font-serif text-2xl p-[30%] "> {title2} </span>
    </div>
    <div class="flex justify-center min-h-screen">
    <div class=" bg-white p-[5%] w-[60%] h-full max-[768px]:bg-black rounded-lg border-none border-Borde_gris flex items-center adsolute mx-40 justify-center "> 
        <div class="flex justify-center space-x-10 ">
            <slot />
        </div>
    </div>
</div>


    <style is:global>

      body {
        overflow: hidden;
       position: static;
      }
        :root {
          --accent: 124, 58, 237;
          --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            #F5F6FA 30%,
            white 60%
          );
        }
        html {
          font-family: system-ui, sans-serif;
          background-color: #f6f6f6;
        }
        code {
          font-family: 'Josefin Slab', serif, 'Josefin Sans', sans-serif, 'Inter', sans-serif
        }
      </style>

  </body>
</html>