            <Input  placeholder="Numero de docuemnto" type="text" Text="" id='numeroDoc'/>
            <h1>Correo:</h1>
        <Input  placeholder="Correo" type="email"Text="" id='correo'/>
    </div>
</div>

<div class="w-full md:w-1/2" >  
    <div class="  flex flex-col  p-[5%]  Flex-box">
            <h1>Contrase√±a:</h1>
            <Input Text="" placeholder=".............." type="password" id=""/>
            <h1>Tipo de Rol:</h1>
            <SelectBoxRol Text=""/>
            <h1 >  Estado:</h1>
            <div class="flex h-[65px] ">
            <RadioButton Text="Activo"/> <RadioButton Text="Inactivo"/>
        </div>
            <h1>Celular:</h1>
            <Input Text="" placeholder="Ej: 312456789" type="text" id=""/>

            <div class="flex flex-col items-center sm:flex-row justify-end space-y-2 sm:space-y-0 sm:space-x-4">
                <a href="/HomeSuperAdmin">
                    <BotonPrincipal Text="Volver" />
