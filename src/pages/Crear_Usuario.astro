---
import Navbar from "../components/Navbar.astro"
import Sidebar_Simulador from "../components/Sidebar_Simulador.astro"
import Input from "../components/Input.astro"
import Button_Inicio from "../components/Button_Inicio.astro"
import SelectBox_Identidad from "../components/SelectBox_Identidad.astro"
import SelectBox_Rol from "../components/SelectBox_Rol.astro"
import TypeRadio from "../components/TypeRadio.astro"

---
<!DOCTYPE html>
<html lang="en">
	<head>
        <meta charset="UTF-8">
        <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Josefin+Sans&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Josefin+Slab&display=swap" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
		<title>PAC</title>

        <style>
            .font-josefin-slab {
                font-family: 'Josefin Slab', serif;
            }
            .font-josefin-sans {
                font-family: 'Josefin Sans', sans-serif;
            }
            .font-inter {
                font-family: 'Inter', sans-serif;
            }
        </style>

	</head>
    <body class=" bg-Gris_Oscuro bg-cover bg-center h-screen overflow-y-scroll ">
        <Navbar Text="SuperAdmin"/>

            <div class=" text-center p-8">
                <span class="font-serif"> Crear usuario </span>
            </div>
            <div class="p-10 w-3/4 h-full bg-white rounded-lg border-none border-Borde_gris flex items-center adsolute mx-40">
                <div class=" p-20 flex justify-center items-center">
                        <div class="flex justify-center space-x-10 ">

                            <div class="flex-box flex flex-col space-y-8 w-1/2">
                                <Input Text="Nombre del usuario:" placeholder="Jairo Ramirez" type="text"/>
                                <SelectBox_Identidad Text="Tipo de documento"/>
                                <Input Text="Número de documento:" placeholder="1112343546" type="text"/>
                                <Input Text="Correo Electrónico:" placeholder="jairoramirez@misena.edu.co" type="email"/>
                            </div>

                            <div class="Flex-box flex flex-col space-y-8 w-1/2">
                                <Input Text="Contraseña:" placeholder=".............." type="password"/>
                                <SelectBox_Rol Text="Rol del usuario:"/>

                                <div class=" space-y-11">
                                <div class="flex-box flex flex-col space-y-6">
                                    <h1 class="font-josefin-slab text-black ">Estado:</h1>
                                    <div class="flex space-x-4">
                                        <TypeRadio Text="Activo" Text="Inactivo"/>
                                    </div>
                                </div>
                                </div>
                                <div class="flex-box flex flex-col space-y-6 w-1/2 ">
                                        <Input Text="Celular:" placeholder="3245678900" type="text"/>
                                </div>

                                <div class="flex justify-end">
                                    <Button_Inicio Text="Guardar"/>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
    </body>
</html>