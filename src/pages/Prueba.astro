---
import LayoutPrincipal from "../layouts/LayoutPrincipal.astro"
import BarraPreguntas from "../Components/BarraPreguntas.astro"
import Grid from "../Components/Grid.astro"
import BotonPrincipal from "../Components/BotonPrincipal.astro"
import BotonSegundo from "../Components/BotonSegundo.astro"
---

<LayoutPrincipal title="">
    <div class="flex justify-center min-h-screen">
        <div class="p-10 w-full max-w-7xl my-10">
            <div class="flex flex-col space-y-8">
                <div class="text-left mb-4">
                    <h1 class="font-josefin-slab text-2xl text-black">Por favor marque “SI” y “NO” en cada pregunta</h1>
                </div>

                <div class="flex justify-center">
                    <BarraPreguntas Text1="Objetivos" Text2="Si" Text3="No"/>
                </div>
                <div class="text-lg font-bold mb-2 pl-12">
                    Operación y costos
                </div>

                <Grid Text1="1. ¿El objetivo principal del software es mejorar la eficiencia operativa de su empresa? "></Grid>

                <div class="flex justify-end space-x-4">
                    <a href="/VistaAlcance">
                        <BotonPrincipal Text="Volver"></BotonPrincipal>
                    </a>
                    <a href="/VistaAnterior">
                        <BotonSegundo Text="Siguiente"></BotonSegundo>
                    </a>
                </div>
            </div>
        </div>
    </div>
</LayoutPrincipal>